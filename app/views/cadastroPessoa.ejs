    <!-- CSS Files -->
    <link href="css/bootstrap.min.css" rel="stylesheet" />
    <link href="css/paper-dashboard.css?v=2.0.0" rel="stylesheet" />
</head>

<body class="">
    <div class="wrapper ">
        <div class="sidebar" data-color="white" data-active-color="primary">
            <div class="logo">
                <a href="#" class="simple-text logo-mini">
                    <div class="logo-image-small">
                        <img src="img/logo-small.png">
                    </div>
                </a>
                <a href="#" class="simple-text logo-normal">
                    Pessoas
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li class=" ">
                        <a href="index">
                            <i class="nc-icon nc-shop"></i>
                            <p>Home</p>
                        </a>
                    </li>
                    <li class="active">
                        <a data-toggle="collapse" href="#collapseCadastro" class=" collapse collapsed" aria-expanded="true">
                            <i class="nc-icon nc-badge"></i>
                            <p>Cadastro</p>
                        </a>
                        <div class="collapse collapsed show" id="collapseCadastro">
                            <ul class="nav">
                                <li class=" active nav-link">
                                    <a href="cadastroPessoa">
                                        <small>
                                            <i class=" nc-icon nc-single-02"></i>
                                            <p>Pessoa</p>
                                        </small>
                                    </a>
                                </li>
                                <li class="nav-link">
                                    <a href="cadastroTelefone">
                                        <small>
                                            <i class=" nc-icon nc-mobile"></i>
                                            <p>Telefone</p>
                                        </small>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>
                    <li>
                        <a data-toggle="collapse" href="#collapseLista" class="collapsed">
                            <i class="nc-icon nc-paper"></i>
                            <p>Lista</p>
                        </a>
                        <div class="collapse" id="collapseLista">
                            <ul class="nav">
                                <li class="nav-link">
                                    <a href="listaPessoas">
                                        <small>
                                            <i class=" nc-icon nc-single-02"></i>
                                            <p>Pessoa</p>
                                        </small>
                                    </a>
                                </li>
                                <li class="nav-link">
                                    <a href="listaTelefones">
                                        <small>
                                            <i class=" nc-icon nc-mobile"></i>
                                            <p>Telefone</p>
                                        </small>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <div class="navbar-toggle">
                            <button type="button" class="navbar-toggler">
                                <span class="navbar-toggler-bar bar1"></span>
                                <span class="navbar-toggler-bar bar2"></span>
                                <span class="navbar-toggler-bar bar3"></span>
                            </button>
                        </div>
                        <a class="navbar-brand" href="#">Pessoas</a>
                    </div>
                </div>
            </nav>
            <div class="content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card card-user">
                            <div class="card-header">
                                <h5 class="card-title">Cadastro de Pessoa</h5>
                            </div>
                            <div class="card-body">
                                <form action="cadastroPessoa" method="POST">
                                    <div class="row">
                                        <div class="col-md-1"></div>
                                        <div class="col-md-10">
                                            <div class="form-group">
                                                <label>Nome</label>
                                                <input type="text" class="form-control" placeholder="Nome" value="<%= data[0].pes_nome%>" name="pes_nome" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-1"> </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Apelido</label>
                                                <input type="text" class="form-control" placeholder="Apelido" value="<%= data[0].pes_apelido%>" name="pes_apelido" required>
                                            </div>
                                        </div>
                                        <div class="col-auto my-1">
                                            <div class="form-group">
                                                <label class="mr-sm-2" for="inlineFormCustomSelect">Sexo</label>
                                                <select class="custom-select form-control" id="inlineFormCustomSelect" name="pes_sexo" required>
                                                <%
                                                    var options = [['', 'Sexo'], ['M', 'Masculino'], ['F', 'Feminino']];
                                                    for ( var i = 0; i < options.length; i++ ){
                                                        var selected = ( data[0].pes_sexo == options[i][0] ) ? "selected" : "";
                                                %>
                                                    <option value="<%=options[i][0] %>" <%=selected %>><%= options[i][1] %></option>
                                                <%  } %>
                                            </select>
                                                <div class="invalid-feedback">Necessário selecionar o sexo</div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Data Nascimento</label>
                                                <input type="date" class="form-control" placeholder="" value="<%= data[0].pes_dtnascimento%>" name="pes_dtnascimento" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="update ml-auto mr-auto">
                                            <input type="hidden" name="pes_codigo" value="<%= data[0].pes_codigo%>">
                                            <button type="submit" class="btn btn-primary btn-round">Salvar</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <footer class="footer footer-black  footer-white ">
                <div class="container-fluid">
                    <div class="row">
                        <div class="credits ml-auto">
                            <span class="copyright">
                                Â©
                                <script>
                                document.write(new Date().getFullYear())
                                </script>, Yuri Oliveira de Paula
                            </span>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="js/core/jquery.min.js"></script>
    <script src="js/core/popper.min.js"></script>
    <script src="js/core/bootstrap.min.js"></script>
    <script src="js/plugins/perfect-scrollbar.jquery.min.js"></script>
    <script src="js/plugins/bootstrap-notify.js"></script>
    <script src="js/paper-dashboard.min.js?v=2.0.0" type="text/javascript"></script>
</body>

</html>